@page
@model LoginModel

@{
    Layout = "/Pages/Shared/_FormsLayout.cshtml";
	ViewData["Title"] = "تسجيل الدخول";
}




	<div class="container-scroller">
		<div class="container-fluid page-body-wrapper full-page-wrapper">
			<div class="content-wrapper d-flex align-items-center auth px-0">
				<div class="row w-100 mx-0">
					<div class="col-lg-4 mx-auto">
						<div class="auth-form-light text-left py-5 px-4 px-sm-5">
							<div class="brand-logo">
								<!--  <img src="../../images/logo-dark.svg" alt="logo"> -->
							</div>
							<h4>بيت الخلوة - دير الانبا بيشوى العامر</h4>
							<h6 class="font-weight-light">تسجيل الدخول.</h6>
							<form class="pt-3" method="post" >

								<div asp-validation-summary="ModelOnly" style="color:red;"></div>
								<div class="form-group">
									<input type="email" class="form-control form-control-lg"  placeholder="البريد الالكترونى" asp-for="Input.Email">
								    <span asp-validation-for="Input.Email" class="text-danger"></span>

								</div>
								<div class="form-group">
									<input type="password" class="form-control form-control-lg"  placeholder="كلمه السر" asp-for="Input.Password">
									<span asp-validation-for="Input.Password" class="text-danger"></span>
								</div>
								<div class="mt-3">
									<input type="submit" value="تسجيل الدخول" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"/>
										
									
								</div>
								<div class="my-2 d-flex justify-content-between align-items-center">
									<div class="form-check">
										<label class="form-check-label text-muted">
											<input type="checkbox" class="form-check-input" asp-for="Input.RememberMe">
											تذكرنى
										</label>
									</div>
									<a href="#" class="auth-link text-black">نسيت كلمه السر </a>
								</div>
								<div class="text-center mt-4 font-weight-light">
									ليس لدى حساب  <a href="/identity/account/register" class="text-primary">انشاء حساب</a>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			<!-- content-wrapper ends -->
		</div>
		<!-- page-body-wrapper ends -->
	</div>


